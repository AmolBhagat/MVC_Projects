@using MVCDemo.Models.ViewModel;
@model ProductListViewModel
@{
    ViewBag.Title = "productviewmodel";
}

<h2>Product List</h2>
<h3>Category : @Model.categoryname.ToUpper()</h3>
<a href="javascript:history.back()">Back</a><br />

@Html.ActionLink("Add", "AddProduct", new { cid = Request.QueryString["cid"] })

<table border="1">
    <tr><th>ID</th><th>Name</th><th>Price</th><th></th></tr>
    @foreach (var item in Model.productlist)
    {
        <tr><td>@item.ProductID</td><td>@item.ProductName</td><td>@item.UnitPrice</td><td></td></tr>
    }
</table>

